---
import '../styles/section.css'
import Image from 'astro/components/Image.astro';
import FreeCodeCamp from '../images/freeCodeCamp.png';
import Figma from '../images/Figma.png';
import Cisco from '../images/Cisco.png';
import Cambridge from '../images/B2English.jpg';
---

<section id="certificates">
    <div class="section-title">
        <h1>Certificados</h1>
        <svg id="title-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" width="40" height="40" stroke-width="2"><path d="M15 15m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path><path d="M13 17.5v4.5l2 -1.5l2 1.5v-4.5"></path><path d="M10 19h-5a2 2 0 0 1 -2 -2v-10c0 -1.1 .9 -2 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -1 1.73"></path><path d="M6 9l12 0"></path><path d="M6 12l3 0"></path><path d="M6 15l2 0"></path></svg>    
    </div>
    <div class="certificates-information">
        <div class="certificate">
            <a href="https://www.freecodecamp.org/certification/fccea4f317a-f1ef-4df7-b4fd-072b06336424/responsive-web-design" target="_blank"><Image src={FreeCodeCamp} alt="Imagen del certificado FreeCodeCamp" style="width: 400px; height: 300px; border-radius: 30px"/></a>
            <div class="certiface-info">
                <h3>Web Responsive Design</h3>
            </div>
        </div>
        <div class="certificate">
            <a href="https://openwebinars.net/certificacion/buQaJHFO?type=png" target="_blank"><Image src={Figma} alt="Imagen del certificado de OpenWebinars" style="width: 400px; height: 300px; border-radius: 30px"/></a>
            <div class="certiface-info">
                <h3>Figma OpenWebinars</h3>
            </div>
        </div>
        <div class="certificate">
            <a href="https://www.credly.com/badges/bedd2b72-fec2-4982-b06a-be58ce1b8878/linked_in_profile" target="_blank"><Image src={Cisco} alt="Imagen del certificado de Cisco Networks Basics" style="width: 300px; height: 300px; border-radius: 30px"/></a>
            <div class="certiface-info">
                <h3>Networks Basics</h3>
            </div>
        </div>
        <div class="certificate">
            <a href="https://www.linkedin.com/in/luis-villar-rold%C3%A1n-28826227a/details/certifications/" target="_blank"><Image src={Cambridge} alt="Imagen del certificado de B2 Cambridge" style="width: 300px; height: 400px; border-radius: 30px"/></a>
            <div class="certiface-info">
                <h3>English B2 Cambridge</h3>
            </div>
        </div>
    </div>
</section>

<style>
    section{
        box-shadow: 0 0 25px #162447;
        background-color: #1624478f;
    }

    .certificates-information{
        width: 920px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        img{
            transition: 200ms;
        }
        :hover{
            h3{
                transition: 0.2s;
                filter: drop-shadow(10px 10px 4px #b81eeb);
            }
            img{
                scale: 1.03;
                transition: 200ms;
            }
        }
    }

    .certificate{
        width: 400px;
        text-align: center;
        border-radius: 50px;
        padding: 20px;
        background-color: #1624478f;
        box-shadow: 0 0 10px #162447;
        margin-top: 30px;
        &:hover{
            transition: 200ms;
            scale: 1.01;
        }
    }
</style>